<Page x:Class="Muhametshin41razmer.AuthPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Muhametshin41razmer"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AuthPage" FontFamily="Comic Sans MS">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"></RowDefinition>
            <RowDefinition Height="80"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <TextBlock Text="Логин " TextAlignment="Right" VerticalAlignment="Center" Grid.Column="0"
                           Width="250" FontSize="20"></TextBlock>
        <TextBox Name="LoginTB" TextChanged="LoginTB_TextChanged" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Row="0" Grid.Column="1"
                         Height="30" Width="250" FontSize="15"></TextBox>
        <TextBlock Text="Пароль " TextAlignment="Right" VerticalAlignment="Center" Grid.Row="1" Grid.Column="0"
                           Width="250" FontSize="20"></TextBlock>
        <TextBox Name="PassTB" TextChanged="PassTB_TextChanged" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Row="1" Grid.Column="1"
                         Height="30" Width="250" FontSize="15"></TextBox>
        <StackPanel Name="captchaTextBlock"  Orientation="Horizontal" Grid.Row="2" Grid.Column="0" HorizontalAlignment="Right" Margin="20">
            <TextBlock Text="Captcha:" FontSize="20" FontFamily="Comic Sans MS"></TextBlock>
            <TextBlock Name="captchaOneWord" FontSize="22" Margin="30,0,0,0"></TextBlock>
            <TextBlock Name="captchaTwoWord" FontSize="22" TextDecorations="Strikethrough" Margin="0,5,0,0"></TextBlock>
            <TextBlock Name="captchaThreeWord" FontSize="22" TextDecorations="Strikethrough"></TextBlock>
            <TextBlock Name="captchaFourWord" FontSize="22" TextDecorations="Strikethrough" Margin="0,10,0,0"></TextBlock>
        </StackPanel>

        <Button Name="GuestLoginButton" Content="Войти как гость" Grid.Row="3" Grid.Column="0"></Button>
        <Button Name="LoginButton" Content="Войти" Grid.Row="3" Grid.Column="1" Click="LoginButton_Click"></Button>
    </Grid>
</Page>
