<Window x:Class="Muhametshin41razmer.OrderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Muhametshin41razmer"
        mc:Ignorable="d"
        d:DesignHeight="550" d:DesignWidth="980"
        Title="OrderWindow" FontFamily="Comic Sans MS">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="310"/>
            <ColumnDefinition Width="210"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Grid.ColumnSpan="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="30"></RowDefinition>
                <RowDefinition Height="30"></RowDefinition>
                <RowDefinition Height="20"></RowDefinition>
                <RowDefinition Height="20"></RowDefinition>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="240"></ColumnDefinition>
                <ColumnDefinition Width="auto"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <TextBlock Text="Дата формирования заказа: " Grid.Row="0" Grid.Column="0" FontSize="18" Height="23" HorizontalAlignment="Left" VerticalAlignment="Center"></TextBlock>
            <TextBlock Name="OrderDateText"  Grid.Row="0" Grid.Column="1" FontSize="18" Height="23" HorizontalAlignment="Left" VerticalAlignment="Center"></TextBlock>
            <TextBlock Text="Дата доставки заказа: " Grid.Row="1" Grid.Column="0" FontSize="18" Height="23" HorizontalAlignment="Left" VerticalAlignment="Center"/>
            <TextBlock Name="DeliveryDateText" Grid.Row="1" Grid.Column="1" FontSize="18" Height="23" HorizontalAlignment="Left" VerticalAlignment="Center"></TextBlock>
            <TextBlock Text="ФИО клиента: " Grid.Row="2" Grid.Column="0" FontSize="18" Height="23" HorizontalAlignment="Left" VerticalAlignment="Bottom"></TextBlock>
            <TextBlock Name="ClientNameText" Grid.Row="2" Grid.Column="1" FontSize="18" Height="23" HorizontalAlignment="Left" VerticalAlignment="Bottom"></TextBlock>
            <TextBlock Text="Номер заказа: " Grid.Row="3" Grid.Column="0" FontSize="18" Height="23" HorizontalAlignment="Left" VerticalAlignment="Bottom"></TextBlock>
            <TextBlock Name="OrderNumberText" Grid.Row="3" Grid.Column="1" FontSize="18" Height="23" HorizontalAlignment="Left" VerticalAlignment="Bottom"></TextBlock>
        </Grid>
        <ListView Name="OrderItemsListView" Grid.Row="1" Margin="0,15,0,35" Grid.ColumnSpan="3" Grid.RowSpan="2">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="500"/>
                            <ColumnDefinition Width="500"/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                        </Grid.RowDefinitions>
                        <Image Width="200" Grid.Column="0" Grid.RowSpan="4" Stretch="UniformToFill" HorizontalAlignment="Center">
                            <Image.Source>
                                <Binding Path="ProductPhotoPath">
                                    <Binding.TargetNullValue>
                                        <ImageSource>
                                            Resources/picture.png
                                        </ImageSource>
                                    </Binding.TargetNullValue>
                                </Binding>
                            </Image.Source>
                        </Image>
                        <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding ProductName}" FontSize="18" FontWeight="Bold" TextWrapping="Wrap"></TextBlock>
                        <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding ProductDescription}" FontSize="16" TextWrapping="Wrap"></TextBlock>
                        <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding ProductManufacturer}"  FontSize="16" ></TextBlock>
                        <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding ProductCost, StringFormat={}{0} руб.}" FontSize="18"></TextBlock>
                        <TextBlock Grid.Row="1" Grid.Column="2" Grid.RowSpan="1" Text="Скидка" FontSize="18" HorizontalAlignment="Center"></TextBlock>
                        <TextBlock Grid.Row="2" Grid.Column="2" Grid.RowSpan="4" Text="{Binding ProductDiscountAmount, StringFormat={}{0}%}" FontSize="18" HorizontalAlignment="Center"></TextBlock>
                        <StackPanel Grid.Row="1" Grid.Column="3" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <Button Content="-" Width="30" Height="30" Click="Button_Click_1" DataContext="{Binding}"></Button>
                            <TextBlock Text="{Binding Quantity}" FontSize="18" FontWeight="Bold" Width="40" Height="30" 
                                       HorizontalAlignment="Center" VerticalAlignment="Center" TextAlignment="Center"></TextBlock>
                            <Button Content="+" Width="30" Height="30" BorderThickness="0" Click="Button_Click_2" DataContext="{Binding}"></Button>
                        </StackPanel>
                        <Button Grid.Row="3" Grid.Column="4" Grid.RowSpan="4" Content="Удалить" FontSize="12"
                                Click="Button_Click_3" DataContext="{Binding}" HorizontalAlignment="Center" VerticalAlignment="Center" ToolTip="Удалить товар"></Button>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <Grid Grid.Row="2" Grid.ColumnSpan="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="Пункт выдачи:" Grid.Column="0" FontSize="18" Margin="0,0,0,10"/>
            <ComboBox Name="PickupPointComboBox" Grid.Column="1"
            FontSize="16" Height="35"
            DisplayMemberPath="FullAddress"></ComboBox>
        </Grid>
        <Button Name="SaveOrderButton" Content="Сохранить заказ"  Click="SaveOrderButton_Click" Grid.Row="3" Margin="95,5,10,5" Grid.Column="2"/>
    </Grid>
</Window>
